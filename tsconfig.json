{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "target": "esnext",
    "lib": [
      "dom"
    ],
    "outDir": "./lib",
    "declaration": true,
    "allowJs": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "~iframe/*": ["./src/iframe/*"],
      "~style/*": ["./src/style/*"],
      "~docs/*": ["./src/docs/*"],
      "~lib/*": ["./src/lib/*"],
      "~dist/*": ["./dist/*"]
    }
  },
  "include": [
    "src/lib/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "tests"
  ]
}
