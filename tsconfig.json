{
  "compilerOptions": {
    "module": "es2015",
    "esModuleInterop": true,
    "target": "es5",
    "allowJs": false,
    "declaration": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "noImplicitAny": true,
    "removeComments": true,
    "baseUrl": "./lib/",
    "paths": {
      "#/*": ["*"]
    }
  },
  "exclude": [
    "node_modules",
    "./tests"
  ]
}
