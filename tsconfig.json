{
  "compilerOptions": {
    "module": "es2015",
    "esModuleInterop": true,
    "target": "es5",
    "allowJs": false,
    "declaration": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "removeComments": true,
    "baseUrl": "./lib/",
    "paths": {
      "@/*": ["*"]
    }
  },
  "exclude": [
    "node_modules",
    "./tests"
  ]
}
