{
  "name": "qiita-widget",
  "version": "2.0.1",
  "main": "dist/lib.js",
  "types": "index.d.ts",
  "dependencies": {
    "lscache": "^1.3.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "autoprefixer": "^10.2.3",
    "css-loader": "^5.0.1",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-jest": "^24.1.3",
    "html-loader": "^1.3.2",
    "jest": "^26.6.3",
    "jest-fetch-mock": "^3.0.3",
    "mini-css-extract-plugin": "^1.3.4",
    "node-sass": "^5.0.0",
    "postcss-loader": "^4.2.0",
    "prettier": "^2.2.1",
    "prettier-eslint-cli": "^5.0.0",
    "sass-loader": "^10.1.1",
    "sloc": "^0.2.1",
    "style-loader": "^2.0.0",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^5.18.0",
    "webpack-cli": "^4.4.0",
    "webpack-remove-empty-scripts": "^0.7.1"
  },
  "scripts": {
    "build": "npm run clean && npm run build:lib && npm run build:iframe && npm run fix && npm run sloc:lib",
    "build:lib": "webpack --env=step1",
    "build:iframe": "npm run wait:lib && webpack --env=step2 & npm run copy",
    "wait:lib": "node scripts/wait.js dist/lib.bundled.js",
    "copy": "cp ./dist/style.css ./docs/app.css",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint lib tests",
    "lint:prettier": "prettier --check lib tests",
    "fix": "npm run fix:eslint && npm run fix:prettier",
    "fix:eslint": "eslint --fix lib tests",
    "fix:prettier": "prettier --check --write lib tests",
    "sloc": "npm run sloc:lib && npm run sloc:test",
    "sloc:lib": "sloc lib",
    "sloc:test": "sloc tests",
    "test": "jest && npm run lint",
    "test:verbose": "jest --coverage --verbose && npm run sloc:test",
    "clean": "rm -f ./dist/* && rm -f ./docs/*.js && rm -f ./docs/*.css && rm -f ./docs/*.txt"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hokkey/qiita-widget-js.git"
  },
  "private": false,
  "description": "Qiita API v2に対応した、Qiitaのユーザー情報を表示するTypeScript製ブログウィジェットです。コピペで簡単に導入できます。",
  "homepage": "https://media-massage.net/qiita-widget-js/",
  "keywords": [
    "Qiita",
    "wiedget",
    "TypeScript",
    "Japanese"
  ],
  "bugs": {
    "url": "https://github.com/hokkey/qiita-widget-js/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Yuma Hori",
    "url": "https://media-massage.net/"
  }
}
