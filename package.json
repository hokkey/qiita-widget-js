{
  "name": "qiita-widget",
  "version": "2.0.1",
  "main": "dist/lib.js",
  "types": "index.d.ts",
  "dependencies": {
    "lscache": "^1.3.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "autoprefixer": "^10.2.3",
    "css-loader": "^5.0.1",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-jest": "^24.1.3",
    "jest": "^26.6.3",
    "jest-fetch-mock": "^3.0.3",
    "mini-css-extract-plugin": "^1.3.4",
    "node-sass": "^5.0.0",
    "postcss-loader": "^4.2.0",
    "prettier": "^2.2.1",
    "prettier-eslint-cli": "^5.0.0",
    "raw-loader": "^4.0.2",
    "sass-loader": "^10.1.1",
    "style-loader": "^2.0.0",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^5.18.0",
    "webpack-cli": "^4.4.0",
    "webpack-fix-style-only-entries": "^0.6.1"
  },
  "scripts": {
    "build": "webpack && npm run fix:prettier:silent",
    "serve": "webpack --watch -d & browser-sync start --config bs-config.js",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint lib tests",
    "lint:prettier": "prettier --check lib tests",
    "fix": "npm run fix:eslint && npm run fix:prettier",
    "fix:eslint": "eslint --fix lib tests",
    "fix:prettier": "prettier --write lib tests",
    "fix:prettier:silent": "prettier --write --loglevel=error lib",
    "test": "jest",
    "test:verbose": "jest --coverage --verbose"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hokkey/qiita-widget-js.git"
  },
  "private": false,
  "description": "Qiita API v2に対応した、Qiitaのユーザー情報を表示するTypeScript製ブログウィジェットです。コピペで簡単に導入できます。",
  "homepage": "https://media-massage.net/qiita-widget-js/",
  "keywords": [
    "Qiita",
    "wiedget",
    "TypeScript",
    "Japanese"
  ],
  "bugs": {
    "url": "https://github.com/hokkey/qiita-widget-js/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Yuma Hori",
    "url": "https://media-massage.net/"
  },
  "jest": {
    "automock": false,
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "moduleNameMapper": {
      "^@/(.+)": "<rootDir>/lib/$1",
      "\\.scss$": "<rootDir>/__mocks__/styleMock.js",
      "\\.html$": "<rootDir>/__mocks__/htmlMock.js",
      "\\.bundled.js$": "<rootDir>/__mocks__/bundleMock.js"
    },
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/tests/**/*.spec.ts"
    ],
    "collectCoverageFrom": [
      "lib/**/*.ts",
      "!**/*.d.ts"
    ]
  }
}
